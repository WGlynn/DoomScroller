{
  "manifest_version": 3,
  "name": "Scroll Balance - Anti-Doomscroll Layer",
  "version": "1.0.0",
  "description": "Add wellness tracking and mindful nudges to your favorite social media apps",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.tiktok.com/*",
    "https://www.instagram.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.youtube.com/*",
    "https://www.reddit.com/*",
    "https://www.facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.tiktok.com/*",
        "https://www.instagram.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.youtube.com/*",
        "https://www.reddit.com/*",
        "https://www.facebook.com/*"
      ],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
